# Supabase Configuration
SUPABASE_URL= your_supabase_url_here
SUPABASE_ANON_KEY=your_anon_key_here
# Get this from: Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your_session_secret_here (minimum 32 characters - REQUIRED)

# JWT Configuration
JWT_SECRET=your_jwt_secret_here (minimum 32 characters - REQUIRED)
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,*.yourdomain.com

# Zoho Mail Configuration
ZOHO_EMAIL=your_zoho_email_here
ZOHO_PASSWORD=your_zoho_password_here
ZOHO_SMTP_HOST=smtp.zoho.com
ZOHO_SMTP_PORT=587
EMAIL_FROM=your_email_from_here
FRONTEND_URL=https://your_frontend_url_here

# Email Verification
JWT_VERIFY_SECRET=your_jwt_verify_secret_here (minimum 32 characters - REQUIRED)
EMAIL_VERIFICATION_EXPIRES_IN=24h
